<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/mRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickStartRec"
        android:text="@string/startRecord"
        android:textSize="20sp" />

      <Button
          android:id="@+id/mTagButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/mRecordButton"
          android:layout_marginTop="21dp"
          android:onClick="onClickMakeTag"
          android:text="@string/makeTag"
          android:textSize="20sp" />

</RelativeLayout>